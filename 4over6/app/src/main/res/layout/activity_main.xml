<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thu409b.a4over6.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/testInfo"
        android:layout_gravity="left|right"
        android:layout_alignBottom="@+id/label0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="本机 ipv6 地址 ："
        android:id="@+id/label0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40px"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ipv6 addr"
        android:id="@+id/tv_ipv6Addr"
        android:layout_below="@+id/label0"
        android:layout_centerHorizontal="true"
        android:textSize="38px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="分配的 ipv4 地址 ："
        android:id="@+id/label1"
        android:textSize="40px"
        android:textStyle="bold"
        android:layout_below="@+id/tv_ipv6Addr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ipv4 addr"
        android:id="@+id/tv_ipv4Addr"
        android:textSize="40px"
        android:layout_below="@+id/label1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="上传包 ："
        android:id="@+id/label2"
        android:textSize="40px"
        android:textStyle="bold"
        android:layout_marginBottom="68dp"
        android:layout_above="@+id/label4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="上传流量 ："
        android:id="@+id/label3"
        android:textSize="40px"
        android:textStyle="bold"
        android:layout_alignTop="@+id/label2"
        android:layout_toRightOf="@+id/label1"
        android:layout_toEndOf="@+id/label1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="下载包 ："
        android:id="@+id/label4"
        android:textSize="40px"
        android:textStyle="bold"
        android:layout_above="@+id/tv_readTimes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="下载流量 ："
        android:id="@+id/label5"
        android:textSize="40px"
        android:textStyle="bold"
        android:layout_alignTop="@+id/label4"
        android:layout_alignLeft="@+id/label3"
        android:layout_alignStart="@+id/label3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="readTimes"
        android:id="@+id/tv_readTimes"
        android:textSize="40px"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_ipv4Addr"
        android:layout_toStartOf="@+id/tv_ipv4Addr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="readFlow"
        android:id="@+id/tv_readFlow"
        android:textSize="40px"
        android:layout_alignTop="@+id/tv_readTimes"
        android:layout_toRightOf="@+id/tv_ipv4Addr"
        android:layout_toEndOf="@+id/tv_ipv4Addr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="writeTimes"
        android:id="@+id/tv_writeTimes"
        android:textSize="40px"
        android:layout_below="@+id/label3"
        android:layout_alignRight="@+id/tv_readTimes"
        android:layout_alignEnd="@+id/tv_readTimes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="writeFlow"
        android:id="@+id/tv_writeFlow"
        android:textSize="40px"
        android:layout_alignTop="@+id/tv_writeTimes"
        android:layout_alignLeft="@+id/tv_readFlow"
        android:layout_alignStart="@+id/tv_readFlow" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/label2"
        android:layout_below="@+id/tv_ipv4Addr"
        android:id="@+id/linearLayout"></LinearLayout>

</RelativeLayout>
